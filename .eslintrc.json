{
	"env": {
		"browser": true,
		"es2021": true
	},
	"extends": ["eslint:recommended", "plugin:react/recommended"],
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": 12,
		"sourceType": "module"
	},
	"plugins": ["react"],
	"rules": {
		"no-mixed-spaces-and-tabs": 0
	},
	"settings": {
		"react": {
			"version": "detect"
		}
	},
	"env": {
		"es6": true,
		"node": true,
		"browser": true,
		"amd": true
	}
}
